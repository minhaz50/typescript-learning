{
  // Visit https://aka.ms/tsconfig to read more about this file

  "compilerOptions": {
    "target": "es2017", // Output modern JS
    "module": "commonjs", // Module system (use "esnext" if working with Next.js/React)
    "lib": ["dom", "esnext"], // Browser + modern JS APIs
    "jsx": "react-jsx", // For React 17+ JSX transform
    "strict": true, // Enable all strict checks (strongest typing)
    "esModuleInterop": true, // Allow import/export compatibility
    // "moduleResolution": "node", // Node-style module resolution
    "forceConsistentCasingInFileNames": true, // Catch case mismatch in imports
    "skipLibCheck": true, // Skip checking .d.ts files (faster)
    "noImplicitAny": true, // Error on variables with implicit 'any'
    "outDir": "dist" // Where compiled JS goes
  },
  "include": ["src"], // Only check files in /src
  "exclude": ["node_modules", "dist"] // Ignore these folders
}
